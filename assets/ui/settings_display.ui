width = 1280
height = 720

Label = {
    text = display
    font = large
    x = 48
    y = 50
}

List = {
    x = 48
    y = 150
    spacing = 2
    elementWidth = 400
    elementHeight = 48
    direction = down
    entries = {
        ComboBox = { text = vsync       data = $data:vsync }
        ComboBox = { text = fullscreen  data = $data:fullscreen }
        ComboBox = { text = resolution  data = $data:resolution }
        ComboBox = { text = gammaCorrection  data = $data:gammaCorrection }
        ComboBox = { text = fxaa  data = $data:fxaa }
    }
}

Footer = {
    Button = { text = apply     input = eMenuApply      trigger = $function:applyGFX }
    Button = { text = return    input = eMenuCancel     trigger = $function:goto_settings }
}
