width = 1280
height = 720
glow = 1

Label = { x = 48 y = 50 text = settings.display font = large }

ComboBox = { x = 48 y = 150 width = 400 height = 48 text = settings.display.vsync            data = $data:vsync }
ComboBox = { x = 48 y = 200 width = 400 height = 48 text = settings.display.fullscreen       data = $data:fullscreen }
ComboBox = { x = 48 y = 250 width = 400 height = 48 text = settings.display.resolution       data = $data:resolution }
ComboBox = { x = 48 y = 300 width = 400 height = 48 text = settings.display.gammaCorrection  data = $data:gammaCorrection }
ComboBox = { x = 48 y = 350 width = 400 height = 48 text = settings.display.fxaa             data = $data:fxaa }
ComboBox = { x = 48 y = 400 width = 400 height = 48 text = settings.display.fpsLimiter       data = $data:fpsLimiter }

Footer = {
    Button = { text = apply     input = eMenuApply      trigger = $function:applyGFX }
    Button = { text = return    input = eMenuCancel     trigger = $function:goto_settings }
}
