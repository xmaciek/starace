#version 450

layout( local_size_x = 8, local_size_y = 8 ) in;

layout( binding = 0 ) uniform ubo {
    float power;
};
layout( rgba32f, binding = 1 ) uniform image2D srcImg;
layout( rgba32f, binding = 2 ) uniform image2D dstImg;

void main()
{
    ivec2 xy = ivec2( gl_GlobalInvocationID.xy );
    vec4 pixelIn = imageLoad( srcImg, xy );
    vec3 pixelOut = pow( pixelIn.rgb, vec3( power ) );
    imageStore( dstImg, xy, vec4( pixelOut, 1.0 ) );
}
